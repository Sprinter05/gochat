    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                ".env"
            ],
            "program": "${workspaceFolder}/server",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Client Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": [
                ".env"
            ],
            "program": "${workspaceFolder}/client",
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "name": "Injection Test (Server)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/test/injection_test.go",
            "args": [
                "-test.v"
            ],
        },
        {
            "name": "Decryption Test (Headless)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/test/decryption_test.go",
            "args": [
                "-test.v"
            ],
        }
    ]
}